    private javax.swing.JButton btnDel;
    private javax.swing.JButton btnDot;
    private javax.swing.JButton btnNhan;
    private javax.swing.JButton btnPhanTram;
    private javax.swing.JButton btnPi;
    private javax.swing.JButton btnRe;
    private javax.swing.JButton btnSet;
    private javax.swing.JButton btnTru;
    private javax.swing.JPanel jPanel1;
    private javax.swing.JPanel jPanel2;
    private javax.swing.JLabel lblScreen1;
    private javax.swing.JLabel lblScreen2;
    // End of variables declaration//GEN-END:variables
    
    private void reset(){
        hanhDong = "";
        screen1 = 0;
        screen2 = 0;
        lblScreen1.setText("");
        lblScreen2.setText("");
    }
    
    private void clickButton(JButton x) {
        lblScreen2.setText(lblScreen2.getText()+x.getText());
        lblScreen2.requestFocus();
    }

    private void action(JButton x) {
        try {
            hanhDong = x.getText();
            lblScreen1.setText(lblScreen2.getText()+hanhDong);
            screen2 = Double.parseDouble(lblScreen2.getText());
            lblScreen2.setText("");
        } catch (Exception e) {
        }
    }
    
    private void ketqua(){
        try {
            screen1 = Double.parseDouble(lblScreen2.getText());
            lblScreen1.setText(lblScreen1.getText()+screen1);
            switch(hanhDong){
                case "+":
                    lblScreen2.setText(screen2+screen1+"");
                    break;
                case "-":
                    lblScreen2.setText(screen2-screen1+"");
                    break;
                case "x":
                    lblScreen2.setText(screen2*screen1+"");
                    break;
                case "/":
                    lblScreen2.setText(screen2/screen1+"");
                    break;
            }
        } catch (Exception e) {
        }
    }
    
    private void del(){
        try {
            String del = lblScreen2.getText().substring(0, lblScreen2.getText().length()-1);
            lblScreen2.setText(del);
        } catch (Exception e) {
        }
    }

    private void oneChiaX() {
        try {
            lblScreen2.setText(1/Double.parseDouble(lblScreen2.getText())+"");
        } catch (Exception e) {
            lblScreen1.setText("1/(0)");
            lblScreen2.setText("Cannot divide by zeroâ€¬");
        }
    }

    private void pow() {
        try {
            lblScreen1.setText("pow("+lblScreen2.getText()+")");
            lblScreen2.setText(Math.pow(Double.parseDouble(lblScreen2.getText()), 2)+"");
        } catch (Exception e) {
            lblScreen1.setText("pow(0)");
            lblScreen2.setText("0");            
        }
    }

    private void sqrt() {
        try {
            lblScreen1.setText("sqrt("+lblScreen2.getText()+")");
            lblScreen2.setText(Math.sqrt(Double.parseDouble(lblScreen2.getText()))+"");
        } catch (Exception e) {
            lblScreen1.setText("sqrt(0)");
            lblScreen2.setText("0");
        }
    }

    private void phanTram() {
        try {
            lblScreen2.setText(Double.parseDouble(lblScreen2.getText())/100+"");
        } catch (Exception e) {
        }
    }

    private void keyPress(KeyEvent evt) {
        if (evt.getKeyCode()==KeyEvent.VK_NUMPAD0){
            clickButton(btn0);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD1){
            clickButton(btn1);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD2){
            clickButton(btn2);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD3){
            clickButton(btn3);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD4){
            clickButton(btn4);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD5){
            clickButton(btn5);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD6){
            clickButton(btn6);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD7){
            clickButton(btn7);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD8){
            clickButton(btn8);
        } else if (evt.getKeyCode()==KeyEvent.VK_NUMPAD9){
            clickButton(btn9);
        } else if (evt.getKeyCode()==KeyEvent.VK_DIVIDE){
            action(btnChia);
        } else if(evt.getKeyCode()==KeyEvent.VK_MULTIPLY){
            action(btnNhan);
        } else if (evt.getKeyCode()==KeyEvent.VK_ADD){
            action(btnCong);
        } else if (evt.getKeyCode()==KeyEvent.VK_SUBTRACT){
            action(btnTru);
        } else if (evt.getKeyCode()==KeyEvent.VK_ENTER){
            ketqua();
        } else if (evt.getKeyCode()==KeyEvent.VK_BACK_SPACE){
            del();
        } else if (evt.getKeyCode()==KeyEvent.VK_ESCAPE){
            reset();
        } else if (evt.getKeyCode()==KeyEvent.VK_PERIOD){
            clickButton(btnDot);
        }
    }
}
